{
  "name": "JS Custom",
  "description": "Javascript customer your website - www.tranduythien.net",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_title": "Javascript customer your website - www.tranduythien.net",
    "default_icon": "icons/logo.png"
  },
  "icons": { 
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png" 
  },
  "permissions": [
    "tabs", "http://*/*", "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"]
    }
  ],
  "web_accessible_resources": ["main.js"]
}
